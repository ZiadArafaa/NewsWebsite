@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
<div class="row justify-content-center">
    <div class="col-md-7 col-lg-5">
        <div class="login-wrap p-4 p-md-5">
            <h3 class="text-center mb-4">Log In</h3>
            <form method="post" asp-controller="Auth" class="login-form">

                <div class="form-group mb-4">
                    <label asp-for="UserName">Username</label>
                    <input type="text" class="form-control rounded-left" placeholder="Username" asp-for="UserName">
                    <span asp-validation-for="UserName"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Password">Password</label>
                    <input type="password" class="form-control rounded-left" placeholder="Password" asp-for="Password">
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Login</button>
                </div>
                
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}