@model NewsFormViewModel
@{
    ViewBag.Title = Model.Id.Equals(0) ? "Create" : "Edit";
}
<div class="row justify-content-center">
    <div class="col-md-7 col-lg-5">
        <div class="login-wrap p-4 p-md-5">
            <h3 class="text-center mb-4">@(Model.Id.Equals(0) ? "Create" : "Edit")</h3>
            <form method="post" asp-controller="News" class="login-form" enctype="multipart/form-data">

                @if (!Model.Id.Equals(0))
                {
                    <input type="hidden" value="@Model.Id" asp-for="Id">
                    <input type="hidden" value="@Model.PublicId" asp-for="PublicId">
                }

                <div class="form-group mb-4">
                    <label asp-for="Title">Title</label>
                    <input type="text" class="form-control rounded-left" placeholder="Title" asp-for="Title">
                    <span asp-validation-for="Title"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="NewsDetails">News</label>
                    <textarea class="form-control" asp-for="NewsDetails"></textarea>
                    <span asp-validation-for="NewsDetails"></span>
                </div>

                <div class="form-group mb-4">
                    
                    <label asp-for="PublicationDate">Publication Date</label>
                    <input type="date" class="form-control rounded-left" placeholder="Publication Date" asp-for="PublicationDate">
                    <span asp-validation-for="PublicationDate"></span>
                </div>
                
                <div class="form-group mb-4">
                    <label asp-for="AuthorId">Author</label>
                    <select class="form-select" asp-items="@Model.Authors" asp-for="AuthorId">
                        <option value="">Authors</option>
                    </select>
                    <span asp-validation-for="AuthorId"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ImageForm">Image</label>
                    <input type="file" class="form-control" asp-for="ImageForm">
                    <span asp-validation-for="ImageForm"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Save</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
   
}